<h1>Edit Group</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for @group do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter group name" %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter group description" %>
      </div>
      <div class="form-group">
<!-- #11 -->
        <%= f.label :public, class: 'checkbox' do %>
          <%= f.check_box :public %> Public group
        <% end %>
      </div>
      <%= f.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
