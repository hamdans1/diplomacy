<%= form_for group do |f| %>
  <% if group.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(group.errors.count, "error") %>.</h4>
      <ul>
        <% group.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_group_tag(group.errors[:name]) do %>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Enter group name" %>
  <% end %>
  <%= form_group_tag(group.errors[:description]) do %>
    <%= f.label :description %>
    <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter group description" %>
  <% end %>
  <%= form_group_tag(group.errors[:public]) do %>
    <%= f.label :public, class: 'checkbox' %>
    <%= f.check_box :public %> Public group
  <% end %>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
