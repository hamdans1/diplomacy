<h1>Groups</h1>
<div class="row">
  <div class="col-md-8">
    <% @groups.each do |group| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to group.name, group %>
          </h4>
          <small>
            <%= group.description %>
          </small>
        </div>
      </div>
    <% end %>
  </div>
  <% if user_is_authorized_for_groups? %>
    <div class="col-md-4">
      <%= link_to "New Group", new_group_path, class:"btn btn-success" %>
    </div>
  <% end %>
</div>
