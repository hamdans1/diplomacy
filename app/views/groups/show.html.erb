<h1><%= @group.name %></h1>

<%= link_to "Edit Group", edit_group_path, class: "btn btn-success" %>

<%# Insert Group All Time leaderboard here
Consider iterating over individual games? %>

<div class="row">
  <div class="col-md-8">
    <p class="lead"><%= @group.description %></p>
    <% @group.campaigns.each do |campaign| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to campaign.title, campaign %>
          </h4>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= link_to "New Campaign", new_campaign_path(@campaign), class: "btn btn-success" %>
  </div>
</div>
