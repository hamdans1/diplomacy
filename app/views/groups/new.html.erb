<h1>New Group </h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for @group do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class:"form-control", placeholder: "Enter Group Name Here" %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class:"form-control", placeholder: "Enter Group Description Here" %>
      </div>
      <div class="form-group">
        <%= f.label :public, class:"checkbox" do %>
          <%= f.check_box :public %>Public Group?
        <% end %>
      </div>
      <%= f.submit "Save", class: "btn btn-success" %>
    <% end %>
  </div>
</div>
