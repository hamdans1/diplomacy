<%= form_for [group, campaign] do |f| %>
   <% if campaign.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(campaign.errors.count, "error") %>.</h4>
      <ul>
        <% campaign.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_group_tag(campaign.errors[:title]) do %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter Campaign title" %>
  <% end %>
  <%= form_group_tag(campaign.errors[:scoring]) do %>
    <%= f.label :scoring %>
    <%= f.text_field :scoring, class: 'form-control', placeholder: "Enter Scoring System" %>
  <% end %>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
 <% end %>
