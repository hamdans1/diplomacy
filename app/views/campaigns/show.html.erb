<h1><%= @campaign.title %></h1>
<p><%= @campaign.scoring %></p>

<div class="row">
  <div class="col-md-8">
    <%= link_to "Edit", edit_campaign_path(@campaign), class: "btn btn-success" %>
    <%= link_to "Delete Campaign", @campaign, method: :delete, class:"btn btn-danger", data: {confirm: "Are you sure you want to delete this campaign?"} %>
  </div>
</div>
