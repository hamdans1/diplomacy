<h1>
  <%= @campaign.title %> <br>
  <small>
    submitted <%= time_ago_in_words(@campaign.created_at) %> ago by <%= @campaign.user.name %>
  </small>
</h1>
<p><%= @campaign.scoring %></p>

<div class="row">
  <% if user_is_authorized_for_campaign?(@campaign) %>
    <div class="col-md-8">
      <%= link_to "Edit Campaign", edit_group_campaign_path(@campaign.group, @campaign), class: "btn btn-success" %>
      <%= link_to "Delete Campaign", [@campaign.group, @campaign], method: :delete, class:"btn btn-danger", data: {confirm: "Are you sure you want to delete this campaign?"} %>
    </div>
  <% end %>
</div>
