<h1>Edit Campaign</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for @campaign do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", placeholder: "Enter Campaign Title" %>
      </div>
      <div class="form-group">
        <%= f.label :scoring %>
        <%= f.text_field :scoring, class: "form-control", placeholder: "Enter Scoring Style" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: "btn btn-success"%>
      </div>
    <% end %>
  </div>
</div>
