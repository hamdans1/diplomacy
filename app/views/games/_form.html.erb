<h4>Add a Game</h4>
<%= form_for [campaign, game] do |f| %>
  <div class="form-group">
    <%= f.label :title, class: 'sr-only' %>
    <%= f.text_field :title, class: 'form-control', placeholder: 'Enter Game Title' %>
  </div>
  <div class="form-group">
    <%= f.label :scoring %>
    <%= f.text_field :scoring, class: 'form-control', placeholder: "Scoring Type" %>
  </div>
  <div class="form-group">
    <%= f.label :style %>
    <%= f.text_field :style, class: 'form-control', placeholder: "Style of Game" %>
  </div>
  <div class="form-group">
    <%= f.label :map %>
    <%= f.text_field :map, class: 'form-control', placeholder: "Map Variant"
  </div>
  <%= f.submit "Submit Comment", class: "btn btn-default pull-right" %>
<% end %>
